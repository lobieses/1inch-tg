{
    "compilerOptions": {
        "target": "es2016",
        "types": ["reflect-metadata"],
        "lib": ["es6"],
        "module": "commonjs",
        "rootDir": "./",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
